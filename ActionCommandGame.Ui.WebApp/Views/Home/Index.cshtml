@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Space Looter</h1>
    @if (User.Identity is not null && User.Identity.IsAuthenticated)
    {
        <h2>Your Adventure starts now @User.Identity.Name</h2>
    }
    else
    {
        <h2>Login to start your adventure</h2>
    }

    <br />
    
    

    @if (User.Identity is not null && User.Identity.IsAuthenticated)
    {
        <a class="btn btn-secondary" asp-area="" asp-controller="Game" asp-action="Index">Play</a>
        @if (User.IsInRole("Admin"))
        {
            <br />
            <br />
            <a class="btn btn-secondary" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
        }
        
       
        <form class="form-inline"
        asp-area=""
          asp-controller="Identity"
          asp-action="LogOut"
          asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <br />
            
            <button type="submit" class="btn btn-secondary">Logout</button>
    </form>

    }else{
        
        <a class="btn btn-secondary" asp-area="" asp-controller="Identity" asp-action="Register">Register</a>
        <span> OR </span>
        <a class="btn btn-secondary" asp-area="" asp-controller="Identity" asp-action="SignIn">Log in</a>
    }

</div>
