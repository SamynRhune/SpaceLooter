@using ActionCommandGame.Services.Model.Results
@model IList<ItemResult>
@{
    ViewData["Title"] = "Manage Items";
}
<a asp-controller="Admin" asp-action="Index"><img id="homelogo" src="~/img/home.png" alt="homeLogo" /></a>
<h1>@ViewData["Title"]</h1>


<a asp-action="ItemCreate" class="btn btn-primary">New Item</a>

<table class="table table-dark table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Fuel</th>
        <th>Attack</th>
        <th>Defense</th>
        <th>ActionCooldown (in seconds)</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <partial name="Items/ItemRowPartial" model="item"/>
    }
    </tbody>
</table>

