@using ActionCommandGame.Services.Model.Core
@using ActionCommandGame.Services.Model.Results
@model AccountResult
@{
    ViewData["Title"] = "Update your Account";
}

<a asp-controller="Home" asp-action="Index"><img id="homelogo" src="~/img/homeW.png" alt="homeLogo" /></a>
<h1>@ViewData["Title"]</h1>
<form method="post">
    <div class="mb-3">
        <label asp-for="UserName" class="form-label whiteletter">Username</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label whiteletter">Email</label>
        <textarea asp-for="Email" class="form-control"></textarea>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label whiteletter">PhoneNumber</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>